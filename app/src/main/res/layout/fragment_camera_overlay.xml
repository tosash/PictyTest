<com.kido.pictytest.SlidingFrame xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="0px"
    android:layout_height="0px"
    android:background="#FFFFFF"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kido.pictytest.CameraFragment">

    <SurfaceView
        android:id="@+id/id_stream"
        android:layout_width="0px"
        android:layout_height="0px"
        android:clickable="true"
        />

    <com.software.shell.fab.ActionButton
        android:id="@+id/aBtnFlash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="@dimen/fab_margin" />

    <com.software.shell.fab.ActionButton
        android:id="@+id/aBtnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_gravity="bottom|left"
        android:layout_marginBottom="@dimen/fab_margin"
        android:layout_marginLeft="@dimen/fab_margin" />

    <com.software.shell.fab.ActionButton
        android:id="@+id/aBtnRotare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin" />

</com.kido.pictytest.SlidingFrame>
